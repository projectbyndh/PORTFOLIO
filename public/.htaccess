# Single Page App fallback for Apache/Hostinger
RewriteEngine On
RewriteBase /

# Allow direct access to existing files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Everything else routes to index.html (handles client-side routes)
RewriteRule . /index.html [L]
